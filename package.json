{
  "name": "avynix-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:backend": "pnpm --filter avynix-streaming dev",
    "dev:frontend": "pnpm --filter rtsp-feed dev",
    "dev:streaming": "docker compose up mediamtx",
    "build:backend": "pnpm --filter avynix-streaming build",
    "build:frontend": "pnpm --filter rtsp-feed build",
    "dev:all": "concurrently -n STREAMING,NESTJS,NEXT -c blue,green,magenta \"pnpm run dev:streaming\" \"pnpm run dev:backend\" \"pnpm run dev:frontend\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
